<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="335dp"
    android:background="#03DAC5"
    android:orientation="vertical">

<!--Title of the Dialog-->
    <TextView
        android:id="@+id/addAssTitleFrag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:text="Adding an Assignment"
        android:textSize="20sp" />

<!--TextFields for Assignment name -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/assNameTFLayoutFrag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/addAssTitleFrag"
        android:layout_marginBottom="-80dp"
        android:hint="Assignment Name"
        android:padding="15dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/assNameTFFrag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/assGradeTFLayoutFrag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/assNameTFLayoutFrag"
        android:layout_marginBottom="-100dp"
        android:hint="Assignment Grade"
        android:padding="15dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/assGradeTFFrag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:numeric="integer">

        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/cancelAssButt"
        android:layout_width="110dp"
        android:layout_height="46dp"
        android:layout_alignBottom="@+id/assGradeTFLayoutFrag"
        android:background="@drawable/mybutton"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="-75dp"
        android:text="Cancel" />

    <Button
        android:layout_width="110dp"
        android:layout_height="46dp"
        android:background="@drawable/mybutton"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:id="@+id/addAssButt"
        android:layout_alignBaseline="@+id/cancelAssButt"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:text="ADD"
        android:layout_marginBottom="15dp"/>


</RelativeLayout>